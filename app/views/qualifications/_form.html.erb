<div class="qualification">
  <h3>Jméno manažera: </h3><p><%= @qualification.player.name %></p><br>
  <h3>Název týmu: </h3><p><%= @qualification.player.team %></p><br>
  <h3>Pohlaví: </h3><p><%= @qualification.player.sex %></p><br>
  <h3>Věk: </h3><p><%= @qualification.player.age %></p>
</div>

<%= form_for @qualification, :url => { :action => "update", :controller => "qualifications" } do |f| %>
  <% if @qualification.errors.any? %>
    <div class="error_message">
      <h2>Při úpravě se vyskytly tyto problémy:</h2>
      <ul>
        <% @qualification.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="body_form">
    <div class="form_qualification">
      <%= f.label :first, "1. týden:" %>
      <div class="r"></div>
      <%= f.text_field :first %>
    </div>
    <div class="form_qualification">
      <%= f.label :second, "2. týden:" %>
      <div class="r"></div>
      <%= f.text_field :second %>
    </div>
    <div class="form_qualification">
      <%= f.label :third, "3. týden:" %>
      <div class="r"></div>
      <%= f.text_field :third %>
    </div>
    <div class="form_qualification">
      <%= f.label :fourth, "4. týden:" %>
      <div class="r"></div>
      <%= f.text_field :fourth %>
    </div>
    <div class="form_qualification_input">
      <%= f.submit "UPRAVIT" %>
    </div>
  </div>

<% end %>